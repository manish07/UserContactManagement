@model RapidD.Data.UserModel

<style>
    .error-text-color {
        color: red;
        font-size: 12px;
    }
</style>

    <div class="container">
    @using (Html.BeginForm("logon", "user", FormMethod.Post,
                    new
                    {
                        enctype = "multipart/form-data",
                        id = "newUserFormData",
                        name = "newUserFormData",

                    }))
    {
        @Html.ValidationSummary(true)
        <h2 class="text-center">Login</h2>
        <div class="row" style="margin-left: 35%; margin-right: 35%;">
            <div class="col-lg-12 col-xs-12">
            <div class="form-group">
                <label>Email</label>
                <div class="input-group-addon">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email Id" })
                    <span class="error-text-color">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>
            <div class="form-group">
                <label>Password</label>
                <div class="input-group-addon">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    <span class="error-text-color">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary center-block">Login</button>            

            <p class="text-muted text-center">
                <small>Do not have an account?</small>
            </p>
            <a class="btn btn-sm btn-white btn-block" href="/user/register">Create an account</a>
            </div>
        </div>
    }
</div>